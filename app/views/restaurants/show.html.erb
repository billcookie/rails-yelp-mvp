<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>

<h1><%= @restaurant.name %></h1>

<h2><%= @restaurant.category %></h2>

<p><%= @restaurant.address %></p>

<p><%= @restaurant.phone_number %></p>

<p><%= link_to 'Add Review', new_restaurant_review_path(@restaurant) %></p>

<% @restaurant.reviews.each do |thing| %>
  <ul>
    <%= thing.content %>
    <%= thing.rating %>
  </ul>
<% end %>
